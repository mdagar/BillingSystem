@model BillingSystem.Models.UserModels
@{
    Layout = null;
}
<div class="grid-border-outer">
    <div class="col-lg-12 padding-t">

        @using (Html.BeginForm("AddUser", "User", FormMethod.Post, new { id = "AddUser", name = "AddUser", @class = "form-container" }))
        {
            <div class="col-sm-12 thumbnail">
                <div class="col-md-12 remove-pad-all">
                    @Html.HiddenFor(x => x.UniqueID)
                    <div class="form-group">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-4 remove-pad-all"><strong style="color: red">*</strong>&nbsp;User Name : </div>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-cont requiredField", Title = "User Name", maxlength = "50", onpaste = "return false", onkeypress = "return blockSpecialCharForName(event);" })
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-4 remove-pad-all"><strong style="color: red">*</strong>&nbsp;Email ID : </div>
                        <div class="col-sm-6">
                            @Html.TextAreaFor(x => x.EmailID, new { @class = "form-cont requiredField", Title = "Email ID", maxlength = "100", onpaste = "return false", onkeypress = "return blockSpecialCharForEmailID(event);" })
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-4 remove-pad-all"><strong style="color: red">*</strong>&nbsp;Password : </div>
                        <div class="col-sm-6">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-cont requiredField", Title = "Password", maxlength = "50" })
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <br />
                    <div class="register-btn">
                        <input type="button" value="Submit" id="btnAdd" class="btn-comn-green" onclick="javascript: SubmitUserDetails();">
                    </div>
                </div>
            </div>
        }
    </div>
</div>
